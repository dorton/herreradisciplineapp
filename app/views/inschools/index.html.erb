<h1>Listing inschools</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Days</th>
    <th>Incident date</th>
    <th>Reason</th>
    <th>Administrator</th>
    <th>Student</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inschools.each do |inschool| %>
  <tr>
    <td><%= inschool.start_date %></td>
    <td><%= inschool.end_date %></td>
    <td><%= inschool.days %></td>
    <td><%= inschool.incident_date %></td>
    <td><%= inschool.reason %></td>
    <td><%= inschool.administrator %></td>
    <td><%= inschool.student_id %></td>
    <td><%= link_to 'Show', inschool %></td>
    <td><%= link_to 'Edit', edit_inschool_path(inschool) %></td>
    <td><%= link_to 'Destroy', inschool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

